<div class='container-fluid d-flex justify-content-between align-items-center bg-primary text-white p-4 px-5'>
  <a href='/products' class='btn btn-primary'>E-Commerce</a>
  <div class='d-flex align-items-center gap-2'>
    <a href='/profile' class='btn btn-primary'>Mi perfil</a>
    <a href='/products' class='btn btn-primary'>Productos</a>
    <a href='/carts/{{user.cart}}' class='btn btn-primary'>Mi carrito</a>
    <a href='/chat' class='btn btn-primary'>Chat</a>
  </div>
  <a href='/api/sessions/logout' class='btn btn-primary'>Logout</a>  
</div>

<div class='container-fluid d-flex justify-content-center align-items-center bg-black text-white p-3 mb-4'>
  <h1>Bienvenido {{user.first_name}}</h1>
</div>

<div class='container pb-4'>
  <h2>Productos</h2>
  {{#each products.docs}}
    <ul class='d-flex flex-row align-items-center justify-content-center gap-4'>
      <div style='min-width: 500px;' class='d-flex justify-content-center'>
        <a href='{{this.thumbnail}}' target='_blank'>{{this.title}}</a></a>
      </div>
      <div>
        <li>Id: {{this._id}}</li>
        <li>Título: {{this.title}}</li>
        <li>Categoría: {{this.category}}</li>
        <li style='max-width: 600px;'>Descripción: {{this.description}}</li>
        <li>Precio: ${{this.price}}</li>
        <li>Código: {{this.code}}</li>
        <li>Stock: {{this.stock}}</li>
        <div class='mt-4 d-flex flex-row align-items-center justify-content-center gap-4'> 
          <button class='btn btn-primary' onclick="addCart('{{this._id}}', '{{this.cid}}')">Agregar al carrito</button>
        </div>
      </div>
    </ul>
  {{/each}}
  
  <div class='d-flex flex-row align-items-center justify-content-center'>
    {{#if products.hasPrevPage }}
      <a href='{{products.prevLink}}' class='btn btn-primary'>Anterior</a>
    {{/if}}
    {{#if products.hasNextPage}}
      <a href='{{products.nextLink}}' class='btn btn-primary'>Siguiente</a>
    {{/if}}
  </div>
</div>

<script src='/js/products.js'></script>