<div>
  <h1>Home Page</h1>
  <h3>Lista de productos:</h3>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Título</th>
        <th>Categoría</th>
        <th>Imagen</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Código</th>
        <th>Stock</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      {{#each product}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.category}}</td>
        <td>{{this.thumbnail}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.code}}</td>
        <td>{{this.stock}}</td>
        <td>{{#if this.status}}Disponible{{else}}No disponible{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>