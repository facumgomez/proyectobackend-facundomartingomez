<div class='container d-flex flex-column align-items-center'>
  <h1>Registro del usuario</h1>
  <form class='d-flex flex-column gap-1' action='/api/sessions/register' method='post'>
    Nombre: 
      <input type='text' name='first_name' placeholder='Ingrese su nombre' required ><br>
    Apellido: 
      <input type='text' name='last_name' placeholder='Ingrese su apellido' required ><br>
    Email: 
      <input type='email' name='email' placeholder='Ingrese su email' required ><br>
    Edad: 
      <input type='number' name='age' placeholder='Ingrese su edad' required ><br>
    Contraseña: 
      <input type='password' name='password' placeholder='Ingrese su contraseña' required ><br>
    <input class='btn btn-primary' type='submit' value='Crear usuario nuevo'>
  </form>
</div>